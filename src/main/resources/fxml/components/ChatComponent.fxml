<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1"
            prefHeight="400.0" prefWidth="300.0" styleClass="chat-panel"
            stylesheets="/css/chat-component.css">
    <top>
        <HBox alignment="CENTER" spacing="5.0" styleClass="chat-selector" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
            <ToggleButton fx:id="globalChatButton" mnemonicParsing="false" text="Global" styleClass="chat-toggle-button">
                <toggleGroup>
                    <ToggleGroup fx:id="chatToggleGroup"/>
                </toggleGroup>
            </ToggleButton>
            <ToggleButton fx:id="lobbyChatButton" mnemonicParsing="false" text="Lobby" styleClass="chat-toggle-button" 
                         toggleGroup="$chatToggleGroup"/>
        </HBox>
    </top>
    <center>
        <ListView fx:id="chatMessages" BorderPane.alignment="CENTER" styleClass="chat-list"/>
    </center>
    <bottom>
        <HBox spacing="5.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
            <TextField fx:id="chatInput" HBox.hgrow="ALWAYS" promptText="Type your message..." styleClass="chat-input"/>
            <Button fx:id="sendButton" mnemonicParsing="false" onAction="#handleSendMessage" text="Send" styleClass="send-button"/>
        </HBox>
    </bottom>
</BorderPane>
