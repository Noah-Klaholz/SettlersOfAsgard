<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17"
      fx:controller="ch.unibas.dmi.dbis.cs108.client.ui.controllers.SettingsController"
      alignment="CENTER" spacing="20.0" styleClass="main-menu-background"
      stylesheets="/css/main-menu.css" prefHeight="400.0" prefWidth="600.0">

    <padding>
        <Insets top="30.0" right="30.0" bottom="30.0" left="30.0"/>
    </padding>

    <Label text="Settings" styleClass="game-title">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>

    <Label fx:id="settingsPlaceholderLabel" text="Settings content goes here..." styleClass="text-primary"/>

    <!-- Add settings controls here (e.g., sliders, checkboxes) -->

    <Button text="Save Changes" onAction="#handleSaveChanges" styleClass="menu-button"/>

    <Button text="Cancel / Back" onAction="#handleCancel" styleClass="menu-button" cancelButton="true"/>

</VBox>
