<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="ch.unibas.dmi.dbis.cs108.client.ui.controllers.GameScreenController">

    <!-- Right: Chat panel (moved from left) -->
    <right>
        <VBox spacing="10" prefWidth="250" styleClass="panel">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Chat" styleClass="label, title"/>
            <ListView fx:id="chatListView" VBox.vgrow="ALWAYS"/>
            <HBox spacing="5">
                <TextField fx:id="chatInputField" promptText="Type a message..." HBox.hgrow="ALWAYS"
                           onAction="#handleChatSend"/>
                <Button text="Send" onAction="#handleChatSend"/>
            </HBox>
        </VBox>
    </right>

    <!-- Center: Properly configured game canvas for sprite rendering -->
    <center>
        <StackPane>
            <Canvas fx:id="gameCanvas" styleClass="canvas"/>
        </StackPane>
    </center>

    <!-- Left: Info bar (moved from right) -->
    <left>
        <VBox spacing="10" prefWidth="200" styleClass="panel">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Game Actions" styleClass="label, title"/>
            <Button text="Resource Overview" onAction="#handleResourceOverview" maxWidth="Infinity"/>
            <Button text="Game Round" onAction="#handleGameRound" maxWidth="Infinity"/>
            <Button text="Other Useful Action" onAction="#handleOtherAction" maxWidth="Infinity"/>
            <VBox.margin>
                <Insets top="10"/>
            </VBox.margin>
        </VBox>
    </left>

    <!-- Bottom: Card hand area with proper styling -->
    <bottom>
        <VBox spacing="10" styleClass="panel">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Artifact Cards -->
            <HBox fx:id="artifactHand" spacing="10" alignment="CENTER_LEFT">
                <Label text="Artifacts:" styleClass="label, title"/>
                <Pane fx:id="artifact1" prefWidth="100" prefHeight="140" styleClass="card"/>
                <Pane fx:id="artifact2" prefWidth="100" prefHeight="140" styleClass="card"/>
                <Pane fx:id="artifact3" prefWidth="100" prefHeight="140" styleClass="card"/>
            </HBox>

            <!-- Structure Cards -->
            <HBox fx:id="structureHand" spacing="10" alignment="CENTER_LEFT">
                <Label text="Structures:" styleClass="label, title"/>
                <Pane fx:id="structure1" prefWidth="100" prefHeight="140" styleClass="card"/>
                <Pane fx:id="structure2" prefWidth="100" prefHeight="140" styleClass="card"/>
                <Pane fx:id="structure3" prefWidth="100" prefHeight="140" styleClass="card"/>
                <Pane fx:id="structure4" prefWidth="100" prefHeight="140" styleClass="card"/>
                <Pane fx:id="structure5" prefWidth="100" prefHeight="140" styleClass="card"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>